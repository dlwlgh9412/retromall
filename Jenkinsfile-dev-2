pipeline {
    agent any

    environment {
        registryUrl = 'dlwlgh9412'
        imageName = 'Retromall'
        version = '0.1'
        dockerfilePath = '/home/ubuntu/retromall/jenkins_home/workspace/retromall-dev/Dockerfile'
        credentialsId = 'dockerhub-id'
    }
    stages {
        stage("build jar") {
            steps {
                // 프로젝트 빌드
                sh './gradlew build -x test'
            }
        }

        stage ('build docker image') {
            steps {
                script {
                    dockerImage = docker.build("${registryUrl}/${imageName}:${version}", "--build-arg TARGET=${imageName}-${version} .")
                }
            }
        }

        stage ('tag docker image') {
            steps {
                script {
                    docker.withRegistry("https://${registryUrl}", credentialsId) {
                        docker.image("${registryUrl}/${imageName}:${version}").push()
                    }
                }
            }
        }


        // stage('Deploy Docker Container') {
        //     steps {
        //         script {
        //             // Log in to Docker Hub
        //             sh 'docker login -u <username> -p <password>'
          
        //             // Pull the Docker image
        //             sh 'docker pull <image-name>:<tag>'
          
        //             // Run the Docker container
        //             sh 'docker run -d --name <container-name> -p <host-port>:<container-port> <image-name>:<tag>'
        //         }
        //     }
        // } 


        // stage ('push') {
        //     steps {
        //         script {
        //             docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
        //                 dockerImage.push()
        //             }
        //         }
        //     }
        // }
    }
}