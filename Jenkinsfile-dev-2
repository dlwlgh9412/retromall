pipeline {
    agent any

    environment {
        registryUrl = 'dlwlgh9412'
        imageName = 'retromall'
        version = '0.0.1'
        dockerfilePath = '/home/ubuntu/retromall/jenkins_home/workspace/retromall-dev/Dockerfile'
        credentialsId = 'dockerhub-id'
    }
    stages {
        stage ('build docker image') {
            steps {
                script {
                    dockerImage = docker.build("${registryUrl}/${imageName}:${version}", ".")
                }
            }
        }

        stage ('tag docker image') {
            steps {
                script {
                    docker.withRegistry("https://${registryUrl}", credentialsId) {
                        docker.image("${registryUrl}/${imageName}:${version}").push()
                    }
                }
            }
        }

        // stage ('push') {
        //     steps {
        //         script {
        //             docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
        //                 dockerImage.push()
        //             }
        //         }
        //     }
        // }
    }
}